<div class="container top-down">
  <div class="page-header center">
    <h1>Sign In</h1>
    <p>Society Members Only</p>
  </div>

  <div class="col-md-4 col-md-offset-4">
  <div class="panel panel-default">
    <div class="panel-body">
        <%= form_tag sessions_path, :class => 'form-stacked' do %>
          <fieldset>
            <% if flash.alert %>
              <div class="alert-message block-message error">
                <p><%= flash.alert %></p>
              </div>
            <% end %>
        
            <div class="input form-group">
                <%= text_field_tag :email, params[:email], class: 'field form-control', placeholder: "Email Address" %>
              </div>

            <div class="input form-group">
                <%= password_field_tag :password, params[:password], class: 'field form-control', placeholder: "Password" %>
            </div>

            <div class="actions">
              <%= submit_tag "Sign In", :class => "btn btn-primary btn-lg btn-block" %>
            </div>
          </fieldset>
        <% end %>
      </div>
      <div class="panel-footer">
        <%= link_to "Forgot your password?", new_password_reset_path %><br />
        Not a member? <%= link_to "Join now.", register_path %>
      </div>
    </div>
  </div>
 </div>